---
import Favicon from "./head/meta/favicon.astro";
import TitleAndDescriptionIndex from "./head/head-index.astro";
import TitleAndDescriptionCustom from "./head/head-dinamico.astro";
const { isIndex, Title, Description, Img, Path } = Astro.props;
---

<head>
    <!-- Global Meta -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <!-- Favicon -->
    <Favicon />
    <!-- Title -->
    {
        isIndex ? (
            <TitleAndDescriptionIndex />
        ) : (
            <TitleAndDescriptionCustom
                isIndex={isIndex}
                Title={Title}
                Description={Description}
                Img={Img}
                Path={Path}
            />
        )
    }
</head>
