---
import {getCollection} from 'astro:content';
const devMode = import.meta.env.DEV;

const AllNotes = await getCollection('note');
const postNote = AllNotes.filter(note => devMode || !note.data.draft)
    .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
    .slice(0, 6);

---

<section class="note">
    <div class="headnote">
        <h2>Apuntes</h2>
        <a class="all-note-link" href="./note">Ver todos üìöÔ∏è</a>
    </div>
    {postNote.map(note => (<a href={`/note/${note.slug}`}>
        <article>
            <picture>
                <img alt="Notion icons" src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/notion/notion-original.svg" />
            </picture>
            <div class="title-note">
                <h3>{note.data.title}</h3>
                <h6>{note.data.folder}</h6>
            </div>
            <div class="arrow-note">
                <span>‚Üí</span>
            </div>
        </article>
    </a>))}
</section>
<style>
    .headnote {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        font-family: "Josefin Sans";
        .all-note-link{
            color:darkorange;
        }
    }
    .note {
        display: inline;
        width: 80%;
        margin-block 2rem;
        article {
            display: flex;
            align-items: center;
            height: 3rem;
            width: 100%;
            margin-block-end: 2rem;
            picture {
                width: 3rem;
                height: 100%;
                margin-inline-end: 1rem;
                border-radius:5px;
                img {
                    width: 100%;
                    height: 100%;
                }
            }
            .title-note {
                width: calc(100% - 6rem);
                h3 {
                    margin: 0;
                    padding: 0;
                    font-family: "Josefin Sans";
                    font-size: 1.2rem;
                    font-weight: 900;
                }
                h6 {
                    margin: 0;
                    padding: 0;
                    font-family: "Lora";
                }
            }
            .arrow-note{
                font-weight: 600;
                font-size: 2rem;
            }
        }
    }
</style>
