---
import Cards from "./cardsBlog.astro";

//CardsBlog
import { getCollection } from "astro:content";
const blogPost = await getCollection("blog");
const devMode = import.meta.env.DEV;

const publicPost = blogPost
    .filter((post) => devMode || post.data.draft !== true)
    .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
    .slice(0, 4);
---

<section class="blogposts">
    <div class="title-article">
        <h2>Articulos</h2>
        <a href="./blog">Ver todos üóÉÔ∏è</a>
    </div>
    <article class="listcard">
        {
            publicPost.map((post) => (
                <Cards
                    title={post.data.title}
                    srcImg={`src/content/blog/${post.slug}/${post.data.image}`}
                    altImg={post.data.imageAlt}
                    src={`/blog/${post.slug}`}
                />
            ))
        }
    </article>
</section>

<style>
    .blogposts {
        height: 22rem;
        width: 80%;
        margin-block: 2rem;
        .title-article {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            h2 {
                margin: 0;
                font-family: "Josefin Sans";
            }
        }
        .listcard {
            margin-block: 1rem;
            display: flex;
            justify-content: space-between;
            height: 14rem;
            width: 100%;
        }
    }
</style>
