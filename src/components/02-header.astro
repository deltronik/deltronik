---
import NavBar from "./header/navbar.astro";
import Hero from "./header/hero.astro";
import FolderHero from "./header/carpeta/header-carpeta.astro";

const { isIndex, Title, Description } = Astro.props;
---

<header>
    <NavBar />
    {
        isIndex ? (
            <Hero />
        ) : (
            <FolderHero Title={Title} Description={Description} />
        )
    }
</header>
