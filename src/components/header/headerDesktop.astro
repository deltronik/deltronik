<section class="header-desktop">
    <div class="site-name">
        <h2>DelTronik</h2>
    </div>
    <div class="box-nav">
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/blog">Blog</a></li>
                <li><a href="/contact">Contact</a></li>
            </ul>
        </nav>
        <picture>
            <img src="./img/logo.svg" alt="DelTronik Logo" />
        </picture>
    </div>
</section>
<style>
    @media (max-width: 620px) {
        .header-desktop {
            display: none;
        }
    }
    @media (min-width: 621px) {
        .header-desktop {
            width: 100%;
            height: 3.2rem;
            display: flex;
            justify-content: space-between;
            border-bottom: 2px solid light-dark(#eef0f2, #253945);
            align-items: center;
            .site-name {
                margin-inline-start: 1rem;
                font: 1.2rem;
            }
            .box-nav {
                margin-inline-end: 1rem;
                display: flex;
                justify-content: space-between;
                nav {
                    align-items: center;
                    display: flex;
                    margin-inline: 0.5rem;
                    ul {
                        align-items: center;
                        display: flex;
                        li {
                            margin-inline: 0.2rem;
                            display: flex;
                            align-items: center;
                            a {
                                color: light-dark(black, #ffffff);
                                font-size: 1.1rem;
                                padding-inline: 0.3rem;
                            }
                        }
                    }
                }
                picture {
                    display: flex;
                    height: 100%;
                    img {
                        height: 2rem;
                        width: 2rem;
                    }
                }
            }
        }
    }
</style>
