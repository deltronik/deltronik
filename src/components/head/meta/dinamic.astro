---
const { Title, Description, Img, Path } = Astro.props;
---

<!-- Open Graph Meta Tags -->
<meta property="og:title" content={Title} />
<meta property="og:description" content={Description} />
<meta property="og:image" content={Img} />
<meta property="og:url" content={`https://deltronik.net${Path}`} />
<meta property="og:type" content="website" />
<meta property="og:site_name" content="Deltronik" />
<meta property="og:locale" content="es_AR" />

<!-- Twitter Meta Tags -->
<meta name="twitter:site" content="@deltronik_" />
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content="Deltronik" />
<meta name="twitter:description" content={Description} />
<meta name="twitter:image" content={Img} />
