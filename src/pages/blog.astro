---
import Base from "./../layouts/Layout.astro";
const PrinHero = true;

import { getCollection } from "astro:content";
const devMode = import.meta.env.DEV;
const blogPost = await getCollection("blog");
const Post = blogPost.filter((post) => {
    return devMode || post.data.draft !== true;
});
---

<Base PrintHero={PrinHero}>
    <h1>Todos los articulos</h1>
    <section>
        {
            Post.map((post) => {
                return (
                    <div class="card">
                        <div class="card-data">
                            <h2>{post.data.title}</h2>
                            <h6>{post.data.date}</h6>
                            <p>{post.data.description}</p>
                            <p>
                                <a href={`/blog/${post.slug}`}>Leer</a>
                            </p>
                        </div>
                        <picture class="card-pic">
                            <img
                                src={`/src/content/blog/${post.slug}/${post.data.image}`}
                                alt={post.data.imageAlt}
                            />
                        </picture>
                    </div>
                );
            })
        }
    </section>
</Base>
<style>
    section {
        margin-block: 2rem;
        width: 80%;
        .card {
            border: 1px solid #ccc;
            border-radius: 1rem;
            display: flex;
            flex-direction: row;
            height: 14rem;
            width: 100%;
            .card-data {
                width: 60%;
                height: 100%;
                margin-inline-start: 1rem;
                h2 {
                    margin-block-start: 0.5rem;
                    margin-block-end: 0;
                }
                h6 {
                    margin-block-start: 0;
                    margin-block-end: 0;
                }
                p {
                    margin-block: 0;
                }
            }
            .card-pic {
                width: 40%;
                height: 100%;
                border-top-right-radius: inherit;
                border-bottom-right-radius: inherit;
                img {
                    height: 100%;
                    width: 100%;
                    border-top-right-radius: inherit;
                    border-bottom-right-radius: inherit;
                }
            }
        }
    }
</style>
