---
import crypto from "node:crypto";
import Creative from "../components/footer/creative.astro";
import Meta from "./../components/01-head.astro";
import Avatar from "./../components/bloques/gravatar.astro";
import "./../css/nota.css";

const { Title, Description, Img, ImgAlt, Path, Author } = Astro.props;
const isIndex = false;
---

<!doctype html>
<html lang="es">
    <Meta
        isIndex={isIndex}
        Title={Title}
        Description={Description}
        Img={Img}
        Path={Path}
    />
    <body class="box-note">
        <input type="checkbox" id="aside-toggle" hidden />
        <aside class="sidebar">
            <div class="nav-desk">
                <Avatar />
            </div>
        </aside>
        <label
            for="aside-toggle"
            class="toggle-button"
            aria-label="Mostrar u ocultar menu de notas">â˜°</label
        >
        <div class="note-body">
            <main>
                <article>
                    <header>
                        <h1>{Title}</h1>
                    </header>
                    <section>
                        <slot />
                    </section>
                </article>
            </main>
            <footer class="foo-note">
                <Creative />
            </footer>
        </div>
    </body>
</html>
