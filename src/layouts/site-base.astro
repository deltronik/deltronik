---
import Meta from "./../components/01-head.astro";
import Header from "./../components/02-header.astro";
import Footer from "./../components/03-footer.astro";
const { isIndex, Title, Description, Img, Path } = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <Meta
            isIndex={isIndex}
            Title={Title}
            Description={Description}
            Img={Img}
            Path={Path}
        />
    </head>
    <body>
        <Header isIndex={isIndex} Title={Title} Description={Description} />
        <slot />
        <Footer isIndex={isIndex} />
    </body>
</html>
